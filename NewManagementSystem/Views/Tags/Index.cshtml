@model IEnumerable<NewManagementSystem.Models.Tag>

@{
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
    ViewData["Title"] = "Tags";
}

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #f5faff;
        margin: 0;
        padding: 0;
    }

    .tag-container {
        max-width: 1000px;
        margin: 40px auto;
        padding: 30px;
        background-color: #ffffff;
        border-radius: 16px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.06);
    }

    .tag-title {
        text-align: center;
        font-size: 28px;
        color: #007acc;
        margin-bottom: 30px;
    }

    .tag-action-bar {
        display: flex;
        justify-content: flex-end;
        margin-bottom: 20px;
    }

    .tag-btn-create {
        background-color: #007acc;
        color: white;
        padding: 10px 18px;
        text-decoration: none;
        border-radius: 8px;
        transition: 0.3s;
        font-weight: 500;
    }

        .tag-btn-create:hover {
            background-color: #005fa3;
        }

    .tag-table {
        width: 100%;
        border-collapse: collapse;
        border-radius: 12px;
        overflow: hidden;
    }

        .tag-table thead {
            background-color: #007acc;
            color: white;
            font-size: 16px;
        }

        .tag-table th,
        .tag-table td {
            padding: 16px;
            text-align: left;
        }

        .tag-table tbody tr {
            border-bottom: 1px solid #e0e0e0;
            transition: background 0.2s ease;
        }

            .tag-table tbody tr:hover {
                background-color: #f1f9ff;
            }

    .tag-btn-action {
        padding: 8px 14px;
        margin: 0 3px;
        border-radius: 6px;
        text-decoration: none;
        font-size: 0.9em;
        font-weight: 500;
        transition: 0.2s;
        display: inline-block;
    }

        .tag-btn-action.edit {
            background-color: #28a745;
            color: white;
        }

        .tag-btn-action.details {
            background-color: #17a2b8;
            color: white;
        }

        .tag-btn-action.delete {
            background-color: #dc3545;
            color: white;
        }

        .tag-btn-action:hover {
            opacity: 0.9;
            transform: scale(1.03);
        }

    .tag-table td {
        color: #000000; /* Màu đen */
    }
</style>

<div class="tag-container">
    <h1 class="tag-title">Tags Management</h1>

    <div class="tag-action-bar">
        <a asp-action="Create" class="tag-btn-create">+ Create New Tag</a>
    </div>

    <table class="tag-table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.TagName)</th>
                <th>@Html.DisplayNameFor(model => model.Note)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.TagName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Note)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.TagId" class="tag-btn-action edit">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.TagId" class="tag-btn-action details">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.TagId" class="tag-btn-action delete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
