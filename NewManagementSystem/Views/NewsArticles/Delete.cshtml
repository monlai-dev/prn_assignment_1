@model NewManagementSystem.Models.NewsArticle

@{
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
    ViewData["Title"] = "Delete News Article";
}

<div class="na-container">
    <h1 class="na-title text-danger">Delete News Article</h1>
    <h4 class="na-subtitle">Are you sure you want to delete this article?</h4>

    <div class="na-info-card">
        <dl class="row">
            <dt class="col-sm-4">Title</dt>
            <dd class="col-sm-8">@Model.NewsTitle</dd>

            <dt class="col-sm-4">Headline</dt>
            <dd class="col-sm-8">@Model.Headline</dd>

            <dt class="col-sm-4">Created Date</dt>
            <dd class="col-sm-8">@Model.CreatedDate?.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-4">Content</dt>
            <dd class="col-sm-8">@Model.NewsContent</dd>

            <dt class="col-sm-4">Source</dt>
            <dd class="col-sm-8">@Model.NewsSource</dd>

            <dt class="col-sm-4">Status</dt>
            <dd class="col-sm-8">
                @if (Model.NewsStatus == true)
                {
                    <span style="color: green; font-weight: bold;">Active</span>
                }
                else
                {
                    <span style="color: red; font-weight: bold;">Inactive</span>
                }
            </dd>

            <dt class="col-sm-4">Modified Date</dt>
            <dd class="col-sm-8">@Model.ModifiedDate?.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-4">Category</dt>
            <dd class="col-sm-8">@Model.Category?.CategoryDesciption</dd>

            <dt class="col-sm-4">Created By</dt>
            <dd class="col-sm-8">@Model.CreatedBy?.AccountName</dd>

            <dt class="col-sm-4">Tags</dt>
            <dd class="col-sm-8">
                @if (Model.Tags != null && Model.Tags.Any())
                {
                    <ul>
                        @foreach (var tag in Model.Tags)
                        {
                            <li>@tag.TagName</li>
                        }
                    </ul>
                }
                else
                {
                    <span>No tags available</span>
                }
            </dd>
        </dl>
    </div>

    <form asp-action="Delete" class="mt-4 d-flex justify-content-end align-items-center gap-2" style="gap: 10px;">
        <input type="hidden" asp-for="NewsArticleId" />
        <button type="submit" class="na-btn-delete">Delete</button>
        <a asp-action="Index" class="na-btn-secondary">Back</a>
    </form>
</div>

<style>
    .na-container {
        max-width: 800px;
        margin: 40px auto;
        padding: 30px;
        background-color: #ffffff;
        border-radius: 16px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.06);
        font-family: 'Segoe UI', sans-serif;
    }

    .na-title {
        font-size: 28px;
        margin-bottom: 10px;
    }

    .na-subtitle {
        font-size: 18px;
        color: #333;
        margin-bottom: 30px;
    }

    .na-info-card {
        padding: 20px 30px;
        background-color: #f8f9fa;
        border-radius: 12px;
        box-shadow: inset 0 0 4px rgba(0,0,0,0.04);
    }

    dt {
        font-weight: 600;
        color: #555;
    }

    dd {
        margin-bottom: 16px;
        color: #333;
    }

    .na-btn-delete {
        background-color: #dc3545;
        color: white;
        padding: 10px 24px;
        border-radius: 8px;
        border: none;
        font-weight: 600;
        font-size: 16px;
        transition: background-color 0.3s ease;
        cursor: pointer;
    }

        .na-btn-delete:hover {
            background-color: #c82333;
        }

    .na-btn-secondary {
        background-color: #6c757d;
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: background-color 0.2s ease-in-out;
        margin-left: 10px;
    }

        .na-btn-secondary:hover {
            background-color: #545b62;
        }
  
</style>
