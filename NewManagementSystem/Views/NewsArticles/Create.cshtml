@model NewsManagementSystem.WebMVC.ViewModels.NewsArticleViewModel

@{
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
    ViewData["Title"] = "Create News Article";
}

<div class="news-container">
    <h1 class="news-title">Create News Article</h1>
    <h4 class="news-subtitle">Fill in the form below to add a new article.</h4>
    <hr />

    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="news-form-group">
            <label asp-for="NewsTitle" class="news-form-label">News Title</label>
            <input asp-for="NewsTitle" class="news-form-control text-dark" />
            <span asp-validation-for="NewsTitle" class="text-danger"></span>
        </div>

        <div class="news-form-group">
            <label asp-for="Headline" class="news-form-label">Head Line</label>
            <input asp-for="Headline" class="news-form-control text-dark" />
            <span asp-validation-for="Headline" class="text-danger"></span>
        </div>

        <div class="news-form-group">
            <label asp-for="CreatedDate" class="news-form-label">Created Date</label>
            <input asp-for="CreatedDate" class="news-form-control text-dark" />
            <span asp-validation-for="CreatedDate" class="text-danger"></span>
        </div>

        <div class="news-form-group">
            <label asp-for="NewsContent" class="news-form-label">News Content</label>
            <input asp-for="NewsContent" class="news-form-control text-dark" />
            <span asp-validation-for="NewsContent" class="text-danger"></span>
        </div>

        <div class="news-form-group">
            <label asp-for="NewsSource" class="news-form-label">News Source</label>
            <input asp-for="NewsSource" class="news-form-control text-dark" />
            <span asp-validation-for="NewsSource" class="text-danger"></span>
        </div>

        <div class="news-form-group">
            <label asp-for="CategoryId" class="news-form-label">Category</label>
            <select asp-for="CategoryId" class="news-form-control text-dark" asp-items="ViewBag.CategoryId"></select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="news-form-group">
            <label class="news-form-label text-dark">News Status</label>
            <div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="NewsStatus" value="true" id="statusActive" />
                    <label class="form-check-label fw-bold" for="statusActive" style="color: green;">Active</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="NewsStatus" value="false" id="statusInactive" />
                    <label class="form-check-label fw-bold" for="statusInactive" style="color: red; white-space: nowrap;">Inactive</label>
                </div>
            </div>
            <span asp-validation-for="NewsStatus" class="text-danger"></span>
        </div>

        <div class="news-form-group">
            <label asp-for="CreatedById" class="news-form-label">Created By</label>
            <select asp-for="CreatedById" class="news-form-control text-dark" asp-items="ViewBag.CreatedById"></select>
            <span asp-validation-for="CreatedById" class="text-danger"></span>
        </div>

        <div class="news-form-group">
            <label asp-for="UpdatedById" class="news-form-label">Updated By</label>
            <select asp-for="UpdatedById" class="news-form-control text-dark" asp-items="ViewBag.UpdatedById"></select>
            <span asp-validation-for="UpdatedById" class="text-danger"></span>
        </div>

        <div class="news-form-group">
            <label asp-for="ModifiedDate" class="news-form-label">Modified Date</label>
            <input asp-for="ModifiedDate" class="news-form-control text-dark " />
            <span asp-validation-for="ModifiedDate" class="text-danger"></span>
        </div>

        <div class="news-form-group">
            <label class="news-form-label">Tags</label>
            <div>
                @foreach (var tag in Model.AvailableTags)
                {
                    <div class="form-check right-check">
                        <label class="form-check-label">@tag.TagName</label>
                        <input type="checkbox" class="form-check-input" name="SelectedTagIds" value="@tag.TagId"
                               @(Model.SelectedTagIds.Contains(tag.TagId) ? "checked" : "") />
                    </div>
                }
            </div>
        </div>

        <div class="news-form-actions mt-4 d-flex justify-content-end gap-2">
            <button type="submit" class="news-btn-submit">Create</button>
            <a asp-action="Index" class="news-btn-secondary">Back</a>
        </div>

    </form>
</div>

<style>
    .news-container {
        max-width: 750px;
        margin: 40px auto;
        padding: 30px;
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.05);
        font-family: 'Segoe UI', sans-serif;
    }

    .news-title {
        color: #3399ff;
        font-size: 28px;
        margin-bottom: 10px;
    }

    .news-subtitle {
        font-size: 16px;
        color: #555;
        margin-bottom: 25px;
    }

    .news-form-group {
        margin-bottom: 18px;
    }
    .news-form-control {
        padding: 10px 12px;
        border-radius: 8px;
        border: 1px solid #ccc;
        font-size: 15px;
        width: 100%;
    }

        .news-form-control:focus {
            border-color: #3399ff;
            outline: none;
            box-shadow: 0 0 0 2px rgba(51, 153, 255, 0.2);
        }


    .news-form-label {
        font-weight: 600;
        margin-bottom: 10px;
        display: block;
        color: black;
        font-size: 16px;
    }

        .news-form-actions {
            margin-top: 1rem;
            display: flex;
            justify-content: flex-end;
            gap: 10px;
        }

        .news-btn-submit {
            background-color: #28a745;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 4px;
            cursor: pointer;
        }

        .news-btn-submit:hover {
            background-color: #218838;
        }

        .news-btn-secondary {
            background-color: #6c757d;
            color: white;
            padding: 8px 16px;
            border-radius: 4px;
            text-decoration: none;
            margin-left: 0;
            display: inline-block;
        }

        .news-btn-secondary:hover {
            background-color: #5a6268;
        }

    /* Căn label bên trái, checkbox bên phải */
    .right-check {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 6px 0;
        border-bottom: 1px solid #eee;
    }

        .right-check .form-check-label {
            font-size: 15px;
            color: #333;
            cursor: pointer;
            margin-right: 10px;
        }

        .right-check .form-check-input {
            width: 18px;
            height: 18px;
            accent-color: #007bff;
            cursor: pointer;
        }

</style>
