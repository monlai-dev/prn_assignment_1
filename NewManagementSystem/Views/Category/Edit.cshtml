@model NewManagementSystem.Models.Category

@{
    ViewBag.Title = "Edit Category";
    Layout = "~/Views/Shared/_LayoutAll.cshtml";
}
<style>
    label, button, select {
        color: black;
    }

    /* Style cho checkbox Active */
    .form-check-input {
        width: 20px;
        height: 20px;
        margin-top: 5px;
        margin-right: 10px;
        cursor: pointer;
    }

    .form-check-label {
        font-weight: 500;
        color: black;
        cursor: pointer;
        font-size: 16px;
        padding-left: 20px;
    }

    element.style {
        margin-top: 25px;
    }

    .custom-margin-top {
        margin-top: 25px;
    }

</style>
<div class="container mt-5">
    <h2 class="text-primary mb-4">✏️ Edit Category</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.CategoryId)

        <div class="bg-white p-4 shadow rounded">
            <div class="form-group mb-3">
                @Html.LabelFor(m => m.CategoryName, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.CategoryName, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(m => m.CategoryDesciption, new { @class = "form-label" })
                @Html.TextAreaFor(m => m.CategoryDesciption, new { @class = "form-control", rows = 3 })
                @Html.ValidationMessageFor(m => m.CategoryDesciption, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(m => m.ParentCategoryId, "Parent Category", new { @class = "form-label" })
                @Html.DropDownList("ParentCategoryId", null, "-- None --", new { @class = "form-control" })
            </div>

            <div class="form-check mb-3">
                @Html.CheckBox("IsActive", Model.IsActive ?? false, new { @class = "form-check-input" })
                @Html.LabelFor(m => m.IsActive, new { @class = "form-check-label" })
            </div>

            <button type="submit" class="btn btn-warning text-white">Save Changes</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary ms-2 custom-margin-top">Cancel</a>
        </div>
    }
</div>
