@model IEnumerable<NewManagementSystem.Models.Category>

@{
    ViewBag.Title = "Category List";
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
}
<style>
    .table-bordered td, .table-bordered th {
        padding: 10px;
    }
</style>
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">📁 Category List</h2>
        <a href="@Url.Action("Create")" class="btn btn-primary">➕ Add New Category</a>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <table class="table table-bordered table-hover bg-white shadow-sm">
        <thead class="table-primary text-center">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Parent</th>
                <th>Active</th>
                <th style="width: 180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>@item.CategoryName</td>
                    <td>@item.CategoryDesciption</td>
                    <td>@item.ParentCategory.CategoryName</td>
                    <td>@(item.IsActive == true ? "Yes" : "No")</td>
                    <td>
                        <a href="@Url.Action("Details", new { id = item.CategoryId })" class="btn btn-info btn-sm">View</a>
                        <a href="@Url.Action("Edit", new { id = item.CategoryId })" class="btn btn-warning btn-sm">Edit</a>
                        <a href="@Url.Action("Delete", new { id = item.CategoryId })" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
