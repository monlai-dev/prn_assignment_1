@model NewsManagementSystem.Controllers.ViewModels.UserEditViewModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Edit user";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body">
                    <h3 class="text-primary fw-bold mb-3">
                        <i class="bi bi-person"></i> Edit User
                    </h3>
                    <form asp-action="EditUser" asp-controller="Admin" method="post" class="row g-3">
                        <div class="col-12">
                            <label asp-for="AccountName" class="form-label text-dark">Full Name</label>
                            <input asp-for="AccountName" class="form-control rounded-pill" style="background:#f8f9fa; color:#222; border:1px solid #e0e0e0;" />
                            <span asp-validation-for="AccountName" class="text-danger small"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="AccountEmail" class="form-label text-dark">Email</label>
                            <input asp-for="AccountEmail" class="form-control rounded-pill" style="background:#f8f9fa; color:#222; border:1px solid #e0e0e0;" />
                            <span asp-validation-for="AccountEmail" class="text-danger small"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="AccountRole" class="form-label text-dark">Role</label>
                            <select asp-for="AccountRole" class="form-select rounded-pill" style="background:#f8f9fa; color:#222; border:1px solid #e0e0e0;">
                                <option value="">-- Select Role --</option>
                                <option value="1" selected="@Model.AccountRole == 1">Staff</option>
                                <option value="2" selected="@Model.AccountRole == 2">Lecturer</option>
                            </select>
                            <span asp-validation-for="AccountRole" class="text-danger small"></span>
                        </div>

                        <div class="col-12 d-flex justify-content-between align-items-center mt-3">
                            <button type="submit" class="btn btn-primary rounded-pill px-4">
                                <i class="bi bi-save"></i> Save Changes
                            </button>
                            <a asp-action="Users" class="btn btn-outline-secondary rounded-pill px-4">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
