@using NewsManagementSystem.BusinessObject.ModelsDTO
@model PagedViewModel<SystemAccount>

@{
    ViewData["Title"] = "User Management";
}
<div class="container py-4">
    <div class="row mb-4">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h3 class="card-title mb-3 text-primary fw-bold">
                        <i class="bi bi-people"></i> User Management
                    </h3>
                    <form method="get" asp-action="Users" asp-controller="Admin" class="row g-3 align-items-end">
                        <div class="col-md-5">
                            <label for="role" class="form-label">Role</label>
                            <input type="number" class="form-control rounded-pill" id="role" name="role" placeholder="Enter role..." min="1" />
                        </div>
                        <div class="col-md-5">
                            <label for="email" class="form-label">Email</label>
                            <input type="text" class="form-control rounded-pill" id="email" name="email" placeholder="Search by email..." />
                        </div>
                        <div class="col-md-2 d-grid">
                            <button type="submit" class="btn btn-primary rounded-pill">
                                <i class="bi bi-search"></i> Search
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <div class="table-responsive shadow-sm rounded">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Items)
                        {
                            <tr>
                                <td>@user.AccountId</td>
                                <td>@user.AccountName</td>
                                <td>@user.AccountEmail</td>
                                <td>
                                    <span class="badge bg-secondary rounded-pill">@user.AccountRole</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- Paging controls -->
            <nav class="mt-3">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Users", new { page = Model.PageNumber - 1 })" tabindex="-1">Previous</a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Users", new { page = i })">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Users", new { page = Model.PageNumber + 1 })">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>